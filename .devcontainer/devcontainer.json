{
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "dev"
  },
  "workspaceFolder": "/app",
  "remoteUser": "root",
  "updateRemoteUserUID": false,
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind"
  ],
  "postCreateCommand": "npm install && npx prisma generate",
  "customizations": {
    "vscode": {
      "extensions": [
        "Prisma.prisma",
        "bradlc.vscode-tailwindcss",
        "csstools.postcss",
        "PulkitGangwar.nextjs-snippets"
      ]
    }
  }
}